@model Category
<h1 class="text-center mb-5"><a href="/products">Products</a> | <a href="/categories">Categories</a></h1>
<div class="row">
    <div class="col-md-6 mid">
        <form asp-action="AddCategory" method="post">
            <h3>New Category</h3>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Name"></span>
                <label for="">Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <button class="btn btn-success">Create</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Existing Categories</h3>
        @{
            foreach(var c in @ViewBag.AllCategories)
            {
                <p><a href="/view/category/@c.CategoryID">@c.Name</a></p>
            }
        }
    </div>
</div>